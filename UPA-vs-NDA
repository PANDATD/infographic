    <script>
        const chartColors = {
            base: '#F4F1DE',
            primary: '#3D5A80',
            secondary: '#E07A5F',
            dark: '#293241',
            accent: '#81B29A'
        };

        const policyData = {
            mii: {
                title: "'Make in India' - The Visionary Blueprint",
                text: "Launched in 2014, this was not merely a slogan but a comprehensive strategy to transform India into a global manufacturing hub. It focused on attracting investment, fostering innovation, enhancing skill development, and building world-class manufacturing infrastructure across 25 key sectors."
            },
            pli: {
                title: "Production-Linked Incentive (PLI) Schemes - The Game-Changer",
                text: "Announced for 14 key sectors, these schemes offer performance-based incentives to companies, reducing cost disadvantages and encouraging economies of scale. They have already attracted massive investments, boosted domestic production and exports, and generated significant employment."
            },
            digital: {
                title: "Digital India - The Technological Backbone",
                text: "This ambitious program has had a profound impact on industry by creating robust digital infrastructure, promoting digital literacy, and enabling platforms like the Government e-Marketplace (GeM), which has revolutionized public procurement and provided a massive, transparent market for MSMEs."
            },
            atmanirbhar: {
                title: "Atmanirbhar Bharat - The Philosophy of Self-Reliance",
                text: "Launched in 2020, this is a comprehensive vision to make India self-reliant by strengthening its economy, infrastructure, and systems. It encompasses policy reforms across sectors, promotes local production, and aims to build resilience against global supply chain disruptions."
            }
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) return label.join(' ');
            return label;
        };

        const defaultChartOptions = (isBar = true) => ({
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: { title: tooltipTitleCallback },
                    backgroundColor: 'rgba(41, 50, 65, 0.9)',
                    titleFont: { size: 14, family: "'Roboto', sans-serif" },
                    bodyFont: { size: 12, family: "'Roboto', sans-serif" },
                    padding: 10,
                    cornerRadius: 5,
                    displayColors: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { color: 'rgba(0, 0, 0, 0.05)' },
                    ticks: { color: chartColors.dark, font: { family: "'Roboto', sans-serif" } }
                },
                x: {
                    grid: { display: false },
                    ticks: { color: chartColors.dark, font: { family: "'Roboto', sans-serif", size: 14 } }
                }
            },
            ...(isBar && { indexAxis: 'x' })
        });
        
        document.addEventListener('DOMContentLoaded', () => {
            const gvaCtx = document.getElementById('gvaChart').getContext('2d');
            new Chart(gvaCtx, {
                type: 'bar',
                data: {
                    labels: ['Start of NDA (2013-14)', 'End of NDA (2023-24)'],
                    datasets: [{
                        label: 'Manufacturing GVA (in ₹ Lakh Crore)',
                        data: [15.6, 27.5],
                        backgroundColor: [chartColors.secondary, chartColors.primary],
                        borderRadius: 5
                    }]
                },
                options: defaultChartOptions()
            });

            const unemploymentCtx = document.getElementById('unemploymentChart').getContext('2d');
            new Chart(unemploymentCtx, {
                type: 'line',
                data: {
                    labels: ['2017-18', '2019-20', '2021-22', '2023-24'],
                    datasets: [{
                        label: 'Unemployment Rate (%)',
                        data: [6.0, 5.8, 4.1, 3.2],
                        borderColor: chartColors.primary,
                        backgroundColor: 'rgba(61, 90, 128, 0.1)',
                        borderWidth: 3,
                        pointBackgroundColor: chartColors.dark,
                        pointRadius: 5,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: defaultChartOptions(false)
            });

            const fdiCtx = document.getElementById('fdiChart').getContext('2d');
            new Chart(fdiCtx, {
                type: 'bar',
                data: {
                    labels: ['UPA Decade (2004-14)', 'NDA Decade (2014-24)'],
                    datasets: [{
                        label: 'FDI Equity Inflow in Mfg (US$ Billion)',
                        data: [98, 165],
                        backgroundColor: [chartColors.accent, chartColors.primary],
                        borderRadius: 5
                    }]
                },
                options: defaultChartOptions()
            });

            const defenceCtx = document.getElementById('defenceChart').getContext('2d');
            new Chart(defenceCtx, {
                type: 'bar',
                data: {
                    labels: ['UPA (2013-14)', 'NDA (2024-25)'],
                    datasets: [{
                        label: 'Defence Exports (in ₹ Crore)',
                        data: [686, 23622],
                        backgroundColor: [chartColors.accent, chartColors.primary],
                        borderRadius: 5
                    }]
                },
                options: {...defaultChartOptions(), indexAxis: 'y' }
            });

            const animateCounter = (element) => {
                const target = +element.getAttribute('data-target');
                const duration = 2000;
                const stepTime = Math.abs(Math.floor(duration / target));
                let current = 0;
                const timer = setInterval(() => {
                    current += 1;
                    element.innerText = current;
                    if (current === target) {
                        clearInterval(timer);
                    }
                }, stepTime);
            };

            const counterObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounter(entry.target);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.8 });

            document.querySelectorAll('[data-target]').forEach(el => counterObserver.observe(el));

            const sectionObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        document.querySelectorAll('.nav-link').forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href').substring(1) === entry.target.id) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, { rootMargin: '-50% 0px -50% 0px' });
            
            document.querySelectorAll('section').forEach(section => sectionObserver.observe(section));

            showPolicy('mii');
        });

        function showPolicy(policyKey) {
            const display = document.getElementById('policy-display');
            document.querySelectorAll('.policy-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`button[onclick="showPolicy('${policyKey}')"]`).classList.add('active');
            
            display.style.opacity = '0';
            setTimeout(() => {
                const data = policyData[policyKey];
                display.innerHTML = `<h4 class="font-display text-2xl text-[#293241] mb-2">${data.title}</h4><p class="text-gray-700">${data.text}</p>`;
                display.style.opacity = '1';
            }, 300);
        }
    </script>
</body>
</html>
